@model ProjetoSaude.Domain.DTO.EnderecoDTO
<h1>Delete</h1>

<h4>Endereco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="rua" />
            <input type="hidden" asp-for="numero" />
            <input type="hidden" asp-for="cep" />
            <input type="hidden" asp-for="regiao" />
            <input type="hidden" asp-for="cidade" />
            <input type="hidden" asp-for="estado" />

            <div class="form-group">
                <label asp-for="rua" class="control-label"></label>
                <label asp-for="rua" class="form-control">@Model.rua</label>
                <span asp-validation-for="rua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numero" class="control-label"></label>
                <label asp-for="numero" class="form-control">@Model.numero</label>
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cep" class="control-label"></label>
                <label asp-for="cep" class="form-control">@Model.cep</label>
                <span asp-validation-for="cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="regiao" class="control-label"></label>
                <label asp-for="regiao" class="form-control">@Model.regiao</label>
                <span asp-validation-for="regiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidade" class="control-label"></label>
                <label asp-for="cidade" class="form-control">@Model.cidade</label>
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label"></label>
                <label asp-for="estado" class="form-control">@Model.estado</label>
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

